{
    "manifest_version": 3,
    "name": "Site Blocker",
    "description": "Site Blocker Extension",
    "version": "1.0.0",
    "permissions": [
        "storage",
        "tabs"
    ],
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["warning.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}